---
import { Description } from "@headlessui/react/dist/components/description/description";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Search from "../../components/Search";
import Advert from "../../components/Advert.astro";
const allPosts = await Astro.glob("../posts/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const pageTitle =
  "Discover Engaging Blog Topics | Explore Blog Post Tags | BlogAI.io";

---

<BaseLayout
  pageTitle={pageTitle}
  Description="Explore a wide range of engaging blog post tags at BlogAI.io. Find topics that resonate with your interests and industry. Our curated tags inspire content creation, making your blogging journey effortless and enjoyable. Elevate your posts with AI-generated ideas tailored to your niche. Start crafting captivating articles today."
>
<Advert />

  <div class="grid sm:grid-cols-3 gap-6 mt-8">

    {
      tags.map((tag) => (
        <div class=" shadow-xl rounded-lg border-gray-600 border-[1px] bg-gray-800">
          <a href={`/tags/${tag}`} class="flex items-center">
            <img
              class="w-16 h-16"
              src={`assets/${tag}-light.svg`}
              alt={`${tag} icon`}
            />
            <span class="text-white ml-2 capitalize">{tag}</span>
          </a>
        </div>
      ))
    }
  </div>
</BaseLayout>
